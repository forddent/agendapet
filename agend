<body>
  <div class="container">
    <!-- Logo aqui -->
    <img
      src="logo.png"
      alt="Logo Dr. Gilberto"
      class="logo"
    />
    <h2>Agende uma consulta</h2>

    <label for="tutor">Nome do Tutor:</label>
    <input type="text" id="tutor" required />

    <label for="pet">Nome do Pet:</label>
    <input type="text" id="pet" required />

    <label for="telefone">Telefone (WhatsApp):</label>
    <input type="tel" id="telefone" placeholder="(xx) xxxxx-xxxx" />

    <label for="data">Data da Consulta:</label>
    <input type="text" id="data" placeholder="Selecione a data" readonly />

    <label for="hora">Hor√°rio:</label>
    <input type="time" id="hora" />

    <label for="motivo">Motivo da Consulta:</label>
    <textarea id="motivo" rows="3" placeholder="Ex: vacina√ß√£o, retorno..."></textarea>

    <button onclick="agendarConsulta()">Agendar</button>

    <div class="mensagem" id="mensagem" style="display:none;"></div>

    <label for="dataBloqueioManual" style="margin-top:20px;">Adicionar bloqueio manual (data):</label>
    <input type="text" id="dataBloqueioManual" placeholder="Selecione a data para bloquear" readonly />
    <button style="margin-top:10px;" onclick="adicionarBloqueioManual()">Bloquear data</button>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <script>
    const numeroWhatsApp = "5574999436711";

    let bloqueiosManuais = JSON.parse(localStorage.getItem("bloqueiosManuais")) || [];
    let agendamentos = JSON.parse(localStorage.getItem("agendamentos")) || [];

    function salvarBloqueios() {
      localStorage.setItem("bloqueiosManuais", JSON.stringify(bloqueiosManuais));
    }
    function salvarAgendamentos() {
      localStorage.setItem("agendamentos", JSON.stringify(agendamentos));
    }
    function getDatasBloqueadas() {
      const datasAgendadas = agendamentos.map(a => a.data);
      return [...new Set([...datasAgendadas, ...bloqueiosManuais])];
    }
    const fpData = flatpickr("#data", {
      dateFormat: "Y-m-d",
      minDate: "today",
      disable: getDatasBloqueadas(),
      locale: {
        firstDayOfWeek: 1
      }
    });
    const fpBloqueio = flatpickr("#dataBloqueioManual", {
      dateFormat: "Y-m-d",
      minDate: "today",
      locale: {
        firstDayOfWeek: 1
      }
    });
    function atualizarBloqueios() {
      const datas = getDatasBloqueadas();
      fpData.set("disable", datas);
    }
    function adicionarBloqueioManual() {
      const data = document.getElementById("dataBloqueioManual").value;
      if (!data) {
        alert("Selecione uma data para bloquear.");
        return;
      }
      if (bloqueiosManuais.includes(data)) {
        alert("Esta data j√° est√° bloqueada manualmente.");
        return;
      }
      bloqueiosManuais.push(data);
      salvarBloqueios();
      atualizarBloqueios();
      fpBloqueio.clear();
      alert("Data bloqueada com sucesso!");
    }
    function agendarConsulta() {
      const tutor = document.getElementById("tutor").value.trim();
      const pet = document.getElementById("pet").value.trim();
      const telefone = document.getElementById("telefone").value.trim();
      const data = document.getElementById("data").value;
      const hora = document.getElementById("hora").value;
      const motivo = document.getElementById("motivo").value.trim();
      if (!tutor || !pet || !data || !hora) {
        alert("Por favor, preencha todos os campos obrigat√≥rios.");
        return;
      }
      const datasBloqueadas = getDatasBloqueadas();
      if (datasBloqueadas.includes(data)) {
        alert("Essa data est√° bloqueada. Por favor, escolha outra.");
        return;
      }
      const agendamento = { tutor, pet, telefone, data, hora, motivo };
      agendamentos.push(agendamento);
      salvarAgendamentos();
      atualizarBloqueios();
      fpData.clear();
      const mensagem = `Ol√°, sou ${tutor} e gostaria de agendar uma consulta com o Dr. Gilberto para meu pet ${pet}.\n\nüìÖ Data: ${data}\n‚è∞ Hor√°rio: ${hora}\nüì± Contato: ${telefone}\nüìù Motivo: ${motivo}`;
      const url = `https://wa.me/${numeroWhatsApp}?text=${encodeURIComponent(mensagem)}`;
      window.open(url, "_blank");
      document.getElementById("tutor").value = "";
      document.getElementById("pet").value = "";
      document.getElementById("telefone").value = "";
      document.getElementById("data").value = "";
      document.getElementById("hora").value = "";
      document.getElementById("motivo").value = "";
      alert("Consulta agendada com sucesso! Data bloqueada.");
    }
    atualizarBloqueios();
  </script>
</body>
